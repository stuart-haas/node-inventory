extends ../layout

block content
  div.container.my-5
    div.row.justify-content-center
      div.col-6
        div.card
          div.card-body
            form(method="post")
              div.form-group
                label Username
                input(type="text", name="username", value="#{typeof username === 'undefined' ? '' : username}", placeholder="User Name", required).form-control
                if(error)
                  small #{error.username}
              div.form-group
                label Password
                input(type="password", name="password", placeholder="Password", required).form-control
                if(error)
                  small #{error.password}
              div.form-group
                div.btn-group
                  button(type="submit", formaction="/login").btn.btn-success Login
        a(href="/register") Register