extends ../layout

block header
  include ../includes/navigation

block content
  div.container-fluid
    div.row.wrapper
      aside.col-3.sidebar
        nav.nav.flex-column
          a(href="/profile").nav-link.active Profile
      main.col-9.content.p-5
        form(method="post", enctype="multipart/form-data").w-50.mx-auto#profile-form
          div.form-group
            label User Name
            input(type="text", value="#{user.username}", disabled).form-control
          div.form-group
            label First Name
            input(type="text", name="firstName", value="#{user.firstName == null ? '' : user.firstName}", placeholder="First Name").form-control
          div.form-group
            label Last Name
            input(type="text", name="lastName", value="#{user.lastName == null ? '' : user.lastName}", placeholder="Last Name").form-control
          div.form-group
            label Photo
            if(user.photo)
              div.mb-2
                img(src="#{user.photo}")
            div.input-group
              div.custom-file
                input(type="file" name="upload").custom-file-input
                label.custom-file-label Choose file
            div.form-group.mt-2
              div.btn-group
                button(type="submit", formaction="/profile/update").btn.btn-success Update